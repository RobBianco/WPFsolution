<Application
   x:Class="VisualStudioStarter.App"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   xmlns:ui="http://schemas.modernwpf.com/2019"
   StartupUri="/Views/MainWindow.xaml">
   <Application.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Themes/AppColors.xaml" />
            <ResourceDictionary Source="Themes/AppStyles.xaml" />
            <ResourceDictionary Source="Themes/AppImages.xaml" />
            <ResourceDictionary Source="Themes/AppConverters.xaml" />
            <materialDesign:BundledTheme
               BaseTheme="Dark"
               PrimaryColor="DeepPurple"
               SecondaryColor="DeepPurple" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Application.Resources>
</Application>
